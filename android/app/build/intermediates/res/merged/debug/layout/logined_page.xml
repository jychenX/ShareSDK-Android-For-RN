<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:text="无界面版的SMSSDK" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入手机号"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" >
    <Button
        android:id="@+id/getmsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取短信验证码" />
    <Button
        android:id="@+id/getvoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取语音验证码" />
    </LinearLayout>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="请输入验证码"
        android:ems="10" />

    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" >
    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交验证" />

    <Button
        android:id="@+id/get_county"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取国家列表" />

    <Button
        android:id="@+id/getkey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getkey"
        android:text="获取Key hash" />

    </LinearLayout>

    <TextView
        android:id="@+id/show_county"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dddddd"
        android:scrollbars="vertical"
        android:paddingLeft="30dp"
        android:lineSpacingExtra="10dp"
        android:textSize="14dp"
        android:text="国家列表：" />

</LinearLayout>
